# StageCraft AI Environment Configuration

# API Keys (Required - Add your actual keys here)
GOOGLE_AI_API_KEY=your_google_ai_api_key_here
XAI_API_KEY=your_xai_api_key_here

# Database
DATABASE_URL=postgresql://user:password@postgres:5432/stagecraft

# Redis (for caching and job queue)
REDIS_URL=redis://redis:6379/0

# Security (Change in production!)
SECRET_KEY=stagecraft-dev-secret-key-change-in-production
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# File Storage
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE=10485760

# AI Configuration
AI_TIMEOUT_SECONDS=60
MAX_CONCURRENT_JOBS=5
IMAGE_QUALITY=high

# Development Settings
DEBUG=true
LOG_LEVEL=INFO

# Production Database Password (for prod deployment)
POSTGRES_PASSWORD=secure_production_password_here

# Domain Configuration (for production)
DOMAIN=yourdomain.com

# Optional: External Storage (for production scaling)
# AWS_S3_BUCKET=stagecraft-images
# AWS_ACCESS_KEY_ID=your_aws_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret
# AWS_REGION=us-west-2

# Optional: Monitoring
# SENTRY_DSN=your_sentry_dsn_for_error_tracking