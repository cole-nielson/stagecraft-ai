# StageCraft AI - Environment Configuration
# Copy this file to .env and fill in your values

# ===========================================
# REQUIRED - Database
# ===========================================
# For local development with docker-compose:
DATABASE_URL=postgresql://user:password@localhost:5432/stagecraft
# Railway will auto-provide this when you add PostgreSQL

# ===========================================
# REQUIRED - AI Service
# ===========================================
GOOGLE_AI_API_KEY=your_google_ai_api_key_here

# ===========================================
# REQUIRED - Security
# ===========================================
SECRET_KEY=generate-a-random-secret-key-here
JWT_SECRET_KEY=generate-another-random-key-here

# ===========================================
# CORS - Frontend URLs
# ===========================================
# Add your Vercel frontend URL here for production
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# ===========================================
# Optional Settings
# ===========================================
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE=10485760
DEBUG=false
LOG_LEVEL=INFO

# ===========================================
# OAuth (optional - for Google login)
# ===========================================
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
